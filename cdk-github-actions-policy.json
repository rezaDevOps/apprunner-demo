{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CDKBootstrapAccess",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:PutParameter"
      ],
      "Resource": [
        "arn:aws:ssm:us-west-2:703671892588:parameter/cdk-bootstrap/*"
      ]
    },
    {
      "Sid": "CDKAssumeRoles",
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": [
        "arn:aws:iam::703671892588:role/cdk-*"
      ]
    },
    {
      "Sid": "CloudFormationAccess",
      "Effect": "Allow",
      "Action": [
        "cloudformation:CreateChangeSet",
        "cloudformation:DescribeChangeSet",
        "cloudformation:ExecuteChangeSet",
        "cloudformation:DescribeStacks",
        "cloudformation:DescribeStackEvents",
        "cloudformation:GetTemplate",
        "cloudformation:DeleteStack",
        "cloudformation:UpdateStack",
        "cloudformation:CreateStack",
        "cloudformation:GetTemplateSummary",
        "cloudformation:ListStacks"
      ],
      "Resource": [
        "arn:aws:cloudformation:us-west-2:703671892588:stack/AppRunnerDemoStack/*",
        "arn:aws:cloudformation:us-west-2:703671892588:stack/CDKToolkit/*"
      ]
    },
    {
      "Sid": "S3CDKAssetsAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::cdk-*-assets-703671892588-us-west-2",
        "arn:aws:s3:::cdk-*-assets-703671892588-us-west-2/*"
      ]
    },
    {
      "Sid": "IAMPassRoleForAppRunner",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::703671892588:role/AppRunnerECRAccessRole"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "apprunner.amazonaws.com"
        }
      }
    }
  ]
}
